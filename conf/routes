# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

GET     /                           controllers.Application.index()

GET     /score                      controllers.Application.selectGame()
GET     /score/:id                  controllers.Score.read(id: models.Score)
POST    /score                      controllers.Score.save()
POST    /score/new                  controllers.Application.fillForm()
GET     /score/shmup/:id            controllers.Score.shmup(id: models.Score)
POST    /score/update               controllers.Score.update()


POST    /game                       controllers.Game.save()
GET     /game/new                   controllers.Game.create()
POST    /game/scores                controllers.Game.saveScores
GET     /game/scores                controllers.Game.importScores
GET     /game/:id/ranking.png       controllers.Ranking.index(id: models.Game)
GET     /game/:id                   controllers.Game.index(id: models.Game)

GET     /games                      controllers.Games.index()

GET     /player/:id                 controllers.Player.index(id: models.Player)
GET     /players                    controllers.Players.index()

GET     /ranking.png/:game          controllers.Ranking.index(game: models.Game)

GET     /assets/*file               controllers.Assets.at(path="/public", file)